{
  "name": "cardcodex-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint:prettier": "prettier --write \"**/*.{js,ts,mjs,cjs,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint",
    "commit": "git add . && git-cz",
    "prepare": "husky",
    "precommit": "lint-staged",
    "playground": "pnpm --filter \"@cardcodex/playground\" dev",
    "build:all": "pnpm run build:resources && pnpm run build:packages",
    "build:packages": "node ./scripts/build.js",
    "build:resources": "pnpm --filter \"@cardcodex/card-resources\" generate:src && node ./scripts/build-resources.js",
    "dev": "node ./scripts/dev.js",
    "test": "vitest",
    "publish:utils": "pnpm --filter \"@cardcodex/utils\" publish --no-git-checks",
    "publish:components": "pnpm --filter \"@cardcodex/components\" publish --no-git-checks"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=10.9.2",
    "pnpm": ">=10.15.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/dict-lorem-ipsum": "^4.0.5",
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "^3.2.4",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.1",
    "cz-git": "^1.12.0",
    "deepmerge": "^4.3.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "postcss-import": "^16.1.1",
    "postcss-url": "^10.1.3",
    "prettier": "^3.6.2",
    "rollup": "^4.52.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4",
    "vitest-browser-vue": "^1.1.0",
    "vue": "^3.5.21"
  }
}
